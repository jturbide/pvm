{
  "name": "jturbide/pvm",
  "description": "A Windows CLI PHP Version Manager (PVM) for installing/upgrading PHP & extensions.",
  "type": "library",
  "license": "BSD-3-Clause",
  "minimum-stability": "dev",
  "prefer-stable": true,
  "config": {
    "optimize-autoloader": true,
    "apcu-autoloader": true,
    "apcu-autoloader-prefix": "jturbide-vhost-",
    "preferred-install": "dist",
    "sort-packages": true
  },
  "autoload": {
    "psr-4": {
      "PVM\\": "src/"
    }
  },
  "require": {
    "php": ">=8.0",
    "symfony/console": "^6.0",
    "guzzlehttp/guzzle": "^7.5"
  },
  "require-dev": {
    "phpunit/phpunit": "^9.5",
    "symfony/var-dumper": "^7.2"
  },
  "bin": [
    "bin/pvm"
  ]
}
