#!/usr/bin/env php
<?php

require __DIR__ . '/../vendor/autoload.php';

use Symfony\Component\Console\Application;
use PVM\Commands\ListCommand;
use PVM\Commands\InstallCommand;
use PVM\Commands\UpgradeCommand;   // Add these lines
use PVM\Commands\UninstallCommand; // Add these lines

$application = new Application('PVM', '0.4.0');

$application->add(new ListCommand());
$application->add(new InstallCommand());
$application->add(new UpgradeCommand());
$application->add(new UninstallCommand());

$application->run();
